            <figure class="zoom-effect">
                        <img src="~/homepage/images/insta-image3.jpg" alt="instagram" class="insta-image">
              <i class="icon icon-instagram"></i>
                    </a>
            </figure>
          </div>                
          <div class="col-lg-2 col-md-4 col-sm-6">
                    <a href="https://www.instagram.com">
                        <i aria-hidden="true"></i>
            <figure class="zoom-effect">
                        <img src="~/homepage/images/insta-image4.jpg" alt="instagram" class="insta-image">
              <i class="icon icon-instagram"></i>
                    </a>
            </figure>
          </div>                
          <div class="col-lg-2 col-md-4 col-sm-6">
                    <a href="https://www.instagram.com">
                        <i aria-hidden="true"></i>
            <figure class="zoom-effect">
                        <img src="~/homepage/images/insta-image5.jpg" alt="instagram" class="insta-image">
              <i class="icon icon-instagram"></i>
