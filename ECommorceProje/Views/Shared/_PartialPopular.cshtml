@model IEnumerable<Product>

@foreach (var item in Model.Where(x => x.IsActive && x.IsHome))
{
    <a href="/Products/Detail/@item?.Id" class="text-decoration-none">
        <div class="swiper-slide">
            <div class="product-item">
                <div class="image-holder">
                    <img src="/Images/@item.Image" alt="Books" class="img-fluid" style="width: 300px; height: 300px;">
                </div>
                <div class="cart-concern">
                    <div class="cart-button d-flex justify-content-between align-items-center">
                        Sepete Ekle <i class="icon icon-arrow-io"></i>

                        <button type="button" class="wishlist-btn">
                            <i class="icon icon-heart"></i>
                        </button>
                    </div>
                </div>
                <div class="product-detail">
                    <h3 class="product-title">
                        <a href="/Products/Detail/@item.Id">@item.Name</a>
                    </h3>
                    <span class ="text-body-secondary">@item.Price</span>
                </div>

            </div>
        </div>
    </a>
}
